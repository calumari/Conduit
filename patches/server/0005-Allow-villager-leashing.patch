From: Callum <38501234+calumari@users.noreply.github.com>
Date: Mon, 25 May 2020 02:37:32 +0100
Subject: [PATCH] Allow villager leashing

---
 src/main/java/net/minecraft/server/EntityInsentient.java   | 5 +++++
 src/main/java/net/minecraft/server/EntityVillager.java     | 7 +++++++
 .../java/net/minecraft/server/EntityVillagerTrader.java    | 7 +++++++
 .../socialhangover/conduit/config/ConduitWorldConfig.java  | 6 +++++-
 4 files changed, 24 insertions(+), 1 deletion(-)

diff --git a/src/main/java/net/minecraft/server/EntityInsentient.java b/src/main/java/net/minecraft/server/EntityInsentient.java
index 5aca7a913..b88c47f55 100644
--- a/src/main/java/net/minecraft/server/EntityInsentient.java
+++ b/src/main/java/net/minecraft/server/EntityInsentient.java
@@ -1054,6 +1054,11 @@ public abstract class EntityInsentient extends EntityLiving {
         if (!this.isAlive()) {
             return false;
         } else if (this.getLeashHolder() == entityhuman) {
+            // Conduit start
+            if (enumhand == EnumHand.OFF_HAND && world.conduitConfig.allowLeashVillager && this instanceof EntityVillagerAbstract) {
+                return true;
+            }
+            // Conduit end
             // CraftBukkit start - fire PlayerUnleashEntityEvent
             if (CraftEventFactory.callPlayerUnleashEntityEvent(this, entityhuman).isCancelled()) {
                 ((EntityPlayer) entityhuman).playerConnection.sendPacket(new PacketPlayOutAttachEntity(this, this.getLeashHolder()));
diff --git a/src/main/java/net/minecraft/server/EntityVillager.java b/src/main/java/net/minecraft/server/EntityVillager.java
index 1094324d0..3913aa0c3 100644
--- a/src/main/java/net/minecraft/server/EntityVillager.java
+++ b/src/main/java/net/minecraft/server/EntityVillager.java
@@ -987,4 +987,11 @@ public class EntityVillager extends EntityVillagerAbstract implements Reputation
         this.bL = restocksToday;
     }
     // Paper end
+
+    // Conduit start
+    @Override
+    public boolean a(EntityHuman entityHuman) {
+        return !this.isLeashed();
+    }
+    // Conduit end
 }
diff --git a/src/main/java/net/minecraft/server/EntityVillagerTrader.java b/src/main/java/net/minecraft/server/EntityVillagerTrader.java
index 2ad8dba5c..923c2e29f 100644
--- a/src/main/java/net/minecraft/server/EntityVillagerTrader.java
+++ b/src/main/java/net/minecraft/server/EntityVillagerTrader.java
@@ -264,4 +264,11 @@ public class EntityVillagerTrader extends EntityVillagerAbstract {
             return !blockposition.a((IPosition) this.a.getPositionVector(), d0);
         }
     }
+
+    // Conduit start
+    @Override
+    public boolean a(EntityHuman entityHuman) {
+        return world.conduitConfig.allowLeashVillager && !this.isLeashed();
+    }
+    // Conduit end
 }
diff --git a/src/main/java/net/socialhangover/conduit/config/ConduitWorldConfig.java b/src/main/java/net/socialhangover/conduit/config/ConduitWorldConfig.java
index cf4079547..5fc7afffb 100644
--- a/src/main/java/net/socialhangover/conduit/config/ConduitWorldConfig.java
+++ b/src/main/java/net/socialhangover/conduit/config/ConduitWorldConfig.java
@@ -10,7 +10,6 @@ public class ConduitWorldConfig {
 
     private final String worldName;
     private final YamlConfiguration config;
-    ConfigurationSection worldDefaults;
 
     public ConduitWorldConfig(String worldName) {
         this.worldName = worldName;
@@ -54,4 +53,9 @@ public class ConduitWorldConfig {
         return config.getString("world-settings." + worldName + "." + path, config.getString("world-settings.default." + path));
     }
 
+    public boolean allowLeashVillager;
+    private void allowLeashVillager() {
+        allowLeashVillager = getBoolean("villager.allow-leash", false);
+    }
+
 }
